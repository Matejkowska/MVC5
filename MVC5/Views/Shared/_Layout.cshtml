<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <img src="https://www.rozwyrazowana.pl/wp-content/uploads/2019/06/business-3224643_1920.jpg" alt="zadania" class="" style="max-width: 100%; padding:10px" />
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="http://localhost:49303/">Przydzielanie zadań pracownikom</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="http://localhost:49303/">Home</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Działy
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="http://localhost:49303/dzialy/">Pokaż wszystkie</a></li>
                        <li><a href="http://localhost:49303/dzialy/Create">Dodaj nowy</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Zadania
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="http://localhost:49303/zadania/">Pokaż wszystkie</a></li>
                        <li><a href="http://localhost:49303/zadania/Create">Dodaj nowe</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Pracownicy
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="http://localhost:49303/pracownicy/">Pokaż wszystkich</a></li>
                        <li><a href="http://localhost:49303/dzialy/pracownicy">Dodaj nowego</a></li>
                    </ul>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Przydzielanie zadań pracownikom - aplikacja testowa</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>