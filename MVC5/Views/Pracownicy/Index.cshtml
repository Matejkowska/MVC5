@model IEnumerable<MVC5.Models.Pracownicy>

@{
    ViewBag.Title = "Pracownicy";
}

<h2>Pracownicy</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                <input type="button" class="btn btn-info" value="Edytuj dane pracownika" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" />
                <input type="button" class="btn btn-danger" value="Usuń pracownika" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" />
            </td>
        </tr>
    }

</table>
<p>

    <input type="button" class="btn btn-info" value="Dodaj nowego pracownika" onclick="location.href='@Url.Action("Create")'" />
</p>
